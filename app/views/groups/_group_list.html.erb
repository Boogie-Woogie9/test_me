<div class="row">
  <div class="col">
    <%= form_for @group, local: true, url: submit_group_path do |f|%>
      <%= f.label :id, "Выберите группу" %>
      <%= f.select :id, options_from_collection_for_select(Group.all.each(), :id, :group_name), :class => "form-select" %>
    </div>
    <div class="col-4">
      <%= f.submit 'Показать', class: 'btn btn-warning'%>
    <% end %>
    <%# f.select :group_id, options_from_collection_for_select(Group.all.each(), :id, :group_name), :class => "form-select" %>
  </div>
</div>
<div class="row">
  <div id="group_table">
    <table class="table table-striped table-hover table-bordered">
      <tr>
        <td>№</td>
        <td>Фамилия</td>
        <td>Имя</td>
        <%# здесь сделать вставки для тестов%>
      </tr>
      <% if !@students.nil? %>
        <% @students.each_with_index do |student, index| %>
          <tr>
            <td><%= index + 1%> </td>
            <td><%= student.surname %></td>
            <td><%= student.name %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
<style>
  #group_table{
    width: 500px;
    padding: 10px;
  }
</style>
