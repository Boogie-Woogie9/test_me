<div class="row">
  <table class="table table-striped table-hover table-bordered">
    <thead sticky-top>
      <tr>
        <td>№</td>
        <td>Название</td>
        <td>------</td>
      </tr>
    </thead>
    <tbody>
      <% if !@groups.nil? %>
        <% @groups.each_with_index do |group, index| %>
          <tr>
            <td><%= index + 1 %> </td>
            <td><%= group.group_name %></td>
            <td><%= link_to 'Удалить', group_destroy_path(:id => group.id), turbo_method: :delete, data: {confirm: "Вы уверены?"}, class: "link-danger" %></td>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>

<style>
  .table{
    text-align: center;
  }
</style>
