<% provide(:title, 'Регистрация') %>
<h1 class="center">Регистрация</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@mentor, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false }}) do |f| %>
      <%= render "mentors/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :"Фамилия" %>
          <%= f.text_field :surname, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-sm-6">
          <%= f.label :"Имя" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8">
          <%= f.label :"Электронная почта" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :"Пароль" %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="col-sm-6">
          <%= f.label :password_confirmation, "Подтвердите пароль" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 centerd" >
          <div class="centerd">
            <%= f.submit "Создать аккаунт", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-sm-4 centerd">
        <%= link_to "Вернуться", :back, class: "btn btn-outline-primary" %>
      </div>
      <div class="col-sm-4 centerd">
        <%= link_to "Войти", mentor_session_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
</div>
<style>
  .centerd{
     display: flex;
  width: 100%;
  align-items: center;
  padding: 10px;
  }
</style>