<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record?%>">
  <%= f.label :content, "Введите ваш вопрос" %>
  <%= f.text_area :content , class: "form-control mb-3"%>
  <% (1..4).to_a.each do |answer_index| %>
    <%= f.label "answer#{answer_index}", "Ответ #{answer_index}" %>
    <%= f.text_field "answer#{answer_index}", class: "form-control mb-3", id: "answer#{answer_index}"%>
  <% end %>
  <%= f.label :correct_answer, "Правильный ответ" %>
  <%= f.select :correct_answer, (1..4).to_a, {}, class: "form-control mb-3", id: 'correct_answer'%>
  <button type="button" data-action="nested-form#remove", class="btn btn-outline-danger">Удалить вопрос</button>
  <%= f.hidden_field :_destroy %>
</div>
