<% provide(:title, 'Регистрация') %>
<h1 class="center">Регистрация</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false }}) do |f| %>
      <%= render "students/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :"Фамилия" %>
          <%= f.text_field :surname, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-sm-6">
          <%= f.label :"Имя" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8">
          <%= f.label :"Электронная почта" %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="col-sm-4">
          <%= f.label :group_id, "Выберите группу" %>
          <%= f.select :group_id, options_from_collection_for_select(Group.all.each(), :id, :group_name), :class => "form-select" %>
        </div>  
      </div>
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :"Пароль" %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="col-sm-6">
          <%= f.label :password_confirmation, "Подтвердите пароль" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>    
        </div>
      </div>

      <div class="submit-btn">
        <%= f.submit "Создать аккаунт", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>