<div class="col-md-6 col-md-offset-3">
  <h2>Редактировать профиль</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "students/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :"Фамилия" %>
        <%= f.text_field :surname, autofocus: true, class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.label :"Имя" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <%= f.label "email (логин)" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="col-sm-4">
        <%= f.label "Пароль" %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> символов минимум</em>
        <% end %>
      </div>
      <div class="col-sm-4">
        <%= f.label :group_id, "Выберите группу" %>
        <%= f.select :group_id, options_from_collection_for_select(Group.all.each(), :id, :group_name), :class => "form-select" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <div class="col-sm-6">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>
    </div>
    <div class="row" style="padding-top: 10px;">
      <div class="col-sm-3"><%= f.submit "Подтвердить", class: "btn btn-outline-success" %></div>
    <% end %>
    <div class="col-sm-4"><%= link_to "Вернуться", :back, class: "btn btn-outline-primary" %></div>
    <div class="col-sm-4">
      <%= button_to "Удалить мой аккаунт", student_path(current_student), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
<div class="submit-btn">
</div>
</div>
