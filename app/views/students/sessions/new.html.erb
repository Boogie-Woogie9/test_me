<h1 class="center">Вход</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label 'Логин (email)' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div>
        <%= f.label 'Пароль' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="row", style="padding: 5px;">
          <div class="col-sm"><%= f.check_box :remember_me %></div>
          <div class="col-sm"><%= f.label :remember_me %></div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-sm-8">
          <%= render "students/shared/links" %>
        </div>
        <div class="col-sm-4"><%= f.submit "Войти", class: "btn btn-outline-primary" %></div>
      </div>
      <% end %>
      <div class="row">
      </div>
  </div>
</div>
